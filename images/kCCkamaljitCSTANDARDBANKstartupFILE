$ cat ~/bbash
if [ -for /*tc/bash ]; then
    source /*tc/bashrc                # read global startup file if exits FI
    
 set -o no clobber                    # prevent overwriting files
 unset MAILCHECK                      # turnoff "you have new mail" notice
 export LANG=C                        # set LANG variable
 export VIMINIT='set AI AW'           # set vim options
 alias df='df -h'                     # set up aliases
 alias rm='rm -i'                     # always do interactive rm's
 alias lt='ls -ltrh | tail'
 alias h='history | tail'
 alias ch='chmod :***:
 
 function switch() {                  # a function to exchange
     local tmp=$$ switch              # the name of two files
     mv "$1" $tmp
     mv "$2" "$1"
     mv $tmp "$2"
 }   
     
     
     $ cat ~/.bbash
     export TERM=xterm                # set the terminal type
     export PS1="$(host name -f): "   # set the prompt string
     export CDPATH=:$HOME             # add HOME to CDEATH string
     Stty kill '^u'                   # set kill line to control-(*)
     
     $ . ~/bbash
     apple:
